{
  "name": "@dex-agent/agent",
  "version": "0.1.0",
  "author": "DFST",
  "type": "module",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps -r dotenv/config --require dotenv/config --env-file=../../.env --env-file=.env --test",
    "build": "rm -rf dist && tsc",
    "local:agent": "CHAIN=local CLOUD=local npm run test test/agent.test.ts",
    "cloud:agent": "CHAIN=devnet CLOUD=silvana npm run test test/agent.test.ts"
  },
  "node": {
    "version": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@dex-agent/contracts": "*",
    "@dex-agent/lib": "*",
    "@silvana-one/api": "^1.0.0",
    "@silvana-one/mina-prover": "^1.0.0",
    "@silvana-one/mina-utils": "^1.0.0",
    "@silvana-one/prover": "^1.0.0",
    "o1js": "2.3.0"
  },
  "c8": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "test/**",
      "dist/**",
      "coverage/**",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "all": true,
    "instrument": true,
    "source-map": true,
    "produce-source-map": true
  }
}
